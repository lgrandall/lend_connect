<!DOCTYPE html>
<html>
  <head>
    <title>LendConnect</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="../../../../favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <title>Dashboard Template for Bootstrap</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-9">
        <div class="row">
          <div class="col-sm-2">

          </div>
          <div class="col-sm-2">
            <div class="page-header">
              <p><h6>BTC ___</h6></p>
              <p><h6>DAV ___</h6></p>
              <p><h6>BCC ___</h6></p>
              <p><h6>LTC ___</h6></p>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="page-header">
              <p><h6>HXT ___</h6></p>
              <p><h6>UCO ___</h6></p>
              <p><h6>REGAL ___</h6></p>
              <p><h6>ETH ___</h6></p>
            </div>
          </div>
          <div class="col-sm-4"></div>
          <div class="col-sm-2">


          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <h1>Mining Logo</h1>
            <hr>
            <h4>My Models</h4>
            <ul class="nav flex-column">
            <% if @user_scenarios %>
              <% @user_scenarios.each do |user_scenario| %>
                <li class="nav-item", style="list-style: none;">
                  <span data-feather="home"></span>
                    <%= link_to "Scenario #{user_scenario.id}", edit_user_scenario_path(user_scenario), class: 'nav-link active' %> <span class="sr-only">(current)</span>
                </li>
              </ul>
              <% end %>
            <% end %>

            <%= link_to 'New Record', new_user_scenario_path, class: "btn btn-outline-success btn-block" %>
            <% if current_user %>
            <button class="btn btn-outline-primary dropdown-format btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.first_name.capitalize + " " + current_user.last_name.capitalize %>
            </button>
            <% end %>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <% if current_user %>
                <p align="center"><%= link_to "Edit Account", edit_user_registration_path %></p>
                <div class="dropdown-divider"></div>
                <p align="center"><%= link_to "Logout", destroy_user_session_path, method: :delete %><p>
              <% else %>
                <p align="center"><%= link_to "Register", new_user_registration_path %></p>
                <p align="center"><%= link_to "Login", new_user_session_path %></p>
              <% end %>
            </div>
          </div>
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <%= yield %>
        </main>
      </div>
    </div>
  	<%= render 'shared/alerts' %>
  </body>
</html>
