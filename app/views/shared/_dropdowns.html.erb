

<div class="dropdown">
	<div class="row">
		<div class="col-5">

		  <button type="button" class="btn btn-secondary btn-block" data-toggle="modal" data-target="#exampleModal" data-focus="true" style="padding-top: -20px;margin-top: 5px">
		    Add Capital
		  </button>

		  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
			  <div class="modal-dialog modal-lg" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModalLabel">Additional Investments</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>


			      <div class="modal-body", style="width: 100%">
				      <div class="tabbable">
				      	<ul class="nav nav-tabs" id="tabContent">
				      		<li class="btn btn-outline-primary"><a href="#Weekday" data-toggle="tab">Weekday</a></li>
	    						<li class="btn btn-outline-primary"><a href="#Month" data-toggle="tab">Month</a></li>
	    					</ul>
	    				</div>


    						<div class="tab-content">
							    <div class="tab-pane active" id="Weekday">
							    	<% if @user_scenario.add_investment.present? %>
							       <div><%= render partial: 'add_investments/update_form', locals: { source: 'edit'} %></div>
							       <% else %>
							       <div><%= render partial: 'add_investments/form', locals: { source: 'new', user_scenario: @user_scenario, add_investment: @user_scenario.add_investment } %></div>
							       <% end %>
							    </div>
							    <div class="tab-pane" id="Month">
								    <% if @user_scenario.add_investment_month.present? %>
								    	<div><%= render partial: 'add_investment_months/update_form', locals: { source: 'edit' } %></div>
								    <% else %>
								      <div><%= render partial: 'add_investment_months/form', locals: { source: 'new' } %></div>
								    <% end %>
							    </div>
							   </div>
			      </div>
			      <div class="modal-footer">

			      </div>
			    </div>
			  </div>
			  
	

		  <button class="btn btn-secondary dropdown-toggle dropdown-format btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" disabled>
		    Coming Soon...
		  </button>
		  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		  	<div class="dropdown-item"><%= render partial: 'form', locals: { source: 'edit' } %></div>
		  </div>
		</div>
		<div class="col-5">
		  <button class="btn btn-secondary dropdown-toggle dropdown-format btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" disabled>
		    Coming Soon...
		  </button>
		  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		  	<div class="dropdown-item"><%= render partial: 'form', locals: { source: 'edit' } %></div>
		  </div>

		  <button class="btn btn-secondary dropdown-toggle dropdown-format btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" disabled>
		    Coming Soon...
		  </button>
		  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		  	<div class="dropdown-item"><%= render partial: 'form', locals: { source: 'edit' } %></div>
		  </div>
		</div>
	</div>
</div>

